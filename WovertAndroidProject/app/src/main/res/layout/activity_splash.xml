<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    >
    <TextView
        android:id="@+id/demo_text_view"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:textColor="@color/fontColor"
        android:textSize="24sp"
        android:background="@color/colorAccent"
        android:text="测试文本空间" />
    <TextView
        android:id="@+id/single_text_view"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="24sp"
        android:background="#ff0"
        android:singleLine="true"
        android:text="就空但行你爱上的纳迪阿加撒地方阿斯顿发" />
    <TextView
        android:id="@+id/mutil_line_text_view"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="24sp"
        android:background="#f00"
        android:maxLines="2"
        android:text="是离开的风景撒娇的反馈阿撒娇的反风景撒娇的反馈阿撒娇的反风景撒娇的反馈阿撒娇的反馈就空但行你爱上的纳迪阿加撒地方阿斯顿发" />
    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/fontColor"
        android:textSize="24sp"
        android:text="@string/splash_text" />
    <Button
        android:id="@+id/enter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_to_enter"
        android:layout_marginTop="@dimen/button_margin"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/ic_launcher"
        android:src="@drawable/apple"
        android:scaleType="fitCenter"
        />

</LinearLayout>